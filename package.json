{
  "name": "fund-management-api",
  "version": "1.0.0",
  "description": "Fund management API",
  "main": "dist/server.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "setup": "docker-compose up -d postgres && npm run db:push && npm run db:generate",
    "dev": "npm run clean && npm run setup && PORT=3000 NODE_ENV=development tsx watch src/server.ts",
    "dev:container": "npm run db:push && tsx watch src/server.ts",
    "start": "npm run clean && npm run setup && npm run build && node dist/server.js",
    "dev:docker": "npm run clean && docker-compose up --build",
    "start:docker": "npm run clean && docker-compose up --build",
    "build": "tsc",
    "test": "docker-compose up -d postgres && sleep 2 && jest",
    "test:watch": "jest --watch",
    "clean": "lsof -ti:3000 | xargs kill -9 || true && docker-compose down || true",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:push": "prisma db push",
    "db:deploy": "prisma migrate deploy",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset"
  },
  "author": "Kelvin Anigboro",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "pino": "^10.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.19.23",
    "@types/pino": "^7.0.4",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "pino-pretty": "^13.1.2",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
